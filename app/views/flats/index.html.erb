<h3 class="mx-5 mt-4"><strong>All our flats (<%= @flats.count %>)</strong></h3>

<div class="container">
  <div class="row">
    <% @flats.each do |flat| %>
    <div class="col-4">
      <div class="card m-4 rounded-lg shadow-sm card-width" style="width: 18rem;">
        <img src="assets/flat.jpg" class="card-img-top" alt="flat image">
        <div class="card-body p-0">
          <div class="card-header p-4 card-height">
            <h5 class="card-title"><%= flat.name %></h5>
            <p class="card-text"><%= flat.address %></p>
            <div class="info py-1">
              <p class="card-text d-inline pr-3"><i class="fas fa-user-friends"></i> <%= flat.number_of_guests %></p>
              <p class="card-text d-inline"><i class="fas fa-euro-sign"></i> <%= flat.price_per_night %></p>
            </div>
          </div>
          <div class="links d-inline-flex">
            <%= link_to "More info", flat_path(flat), class: "d-block ml-1 p-3 bg-white" %>
            <%= link_to "Edit", flat_path(flat), class: "d-block ml-2 p-3 bg-white text-warning" %>
            <%= link_to "Remove", flat_path(flat), class: "d-block ml-2 p-3 bg-white text-danger" %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
